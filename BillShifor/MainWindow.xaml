<Window x:Class="BillShifor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BillShifor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF081C15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="631*"/>
        </Grid.ColumnDefinitions>
        <Menu Margin="0,0,619,0" Background="#FF1B4332" Grid.ColumnSpan="2">
            <MenuItem Header="Добавить файл" Width="181" FontSize="15" Height="60" Cursor="Arrow" Background="#FF40916C" Foreground="White" BorderBrush="#FF1B4332"/>
            <MenuItem Header="Шифровки" Width="181" FontSize="15" Height="60" Background="#FF40916C" RenderTransformOrigin="1,0" Foreground="White" Click="MenuItem_Click" BorderBrush="#FF1B4332">
                <MenuItem Header="Цезарь" Background="#FF40916C" Width="181" Height="55" FontSize="15" Foreground="White" Cursor=""/>
                <MenuItem Header="Сталин" Background="#FF40916C" Width="181" Height="55" FontSize="15" Foreground="White" Cursor=""/>
                <Separator/>
            </MenuItem>
            <MenuItem Header="Действия" Background="#FF40916C" Width="181" Height="55" FontSize="15" Foreground="White" Cursor="" Click="MenuItem_Click_1" BorderBrush="#FF1B4332">
                <MenuItem Header="Экспорт" Background="#FF40916C" Width="181" Height="55" FontSize="15" Foreground="White" Cursor=""/>
                <MenuItem Header="Импорт" Background="#FF40916C" Width="181" Height="55" FontSize="15" Foreground="White" Cursor=""/>
                <Separator/>
            </MenuItem>
        </Menu>
        <Button Content="Выход" Margin="0,357,0,0" HorizontalAlignment="Center" Width="129" Height="48" VerticalAlignment="Top" FontSize="15" Background="#FF2D6A4F" Foreground="White" Click="Button_Click" ClickMode="Press" >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                    CornerRadius="10"
                    BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.FocusVisualStyle>
                <Style/>
            </Button.FocusVisualStyle>
        </Button>
        <ListBox Grid.Column="1" Height="156" Margin="0,20,18,0" VerticalAlignment="Top" d:ItemsSource="{d:SampleData ItemCount=5}" Foreground="White" Background="#FF1B4332" HorizontalAlignment="Right" Width="594"/>
        <ListBox Grid.Column="1" Height="156" Margin="0,234,18,0" VerticalAlignment="Top" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#FF1B4332" Foreground="White" SelectionChanged="ListBox_SelectionChanged" HorizontalAlignment="Right" Width="594"/>
        <Button Content="Шифровать" Margin="0,181,482,0" HorizontalAlignment="Right" Width="130" Height="48" VerticalAlignment="Top" FontSize="15" Background="#FF2D6A4F" Foreground="White" Click="Button_Click" ClickMode="Press" Grid.Column="1" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                        CornerRadius="10"
                        BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.FocusVisualStyle>
                <Style/>
            </Button.FocusVisualStyle>
        </Button>
        <Button Content="Расшифровать" Margin="0,181,349,0" HorizontalAlignment="Right" Width="128" Height="48" VerticalAlignment="Top" FontSize="15" Background="#FF2D6A4F" Foreground="White" Click="Button_Click" ClickMode="Press" Grid.Column="1" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                        CornerRadius="10"
                        BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.FocusVisualStyle>
                <Style/>
            </Button.FocusVisualStyle>
        </Button>

    </Grid>
</Window>
